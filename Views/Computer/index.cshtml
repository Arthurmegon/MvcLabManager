@model IEnumerable<MvcLabManager.Models.Computer>

@{
    ViewData["Title"] = "Computers";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Anyone Computer here</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Ram</td>
                <td>Processor</td>
                <td></td>
            </tr>
            <tbody>
                @foreach(var computer in Model)
                {
                    <tr>
                        <td>@computer.Id</td>
                        <td>@computer.Ram</td>
                        <td>@computer.Processor</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Computer/Show/@computer.Id">
                                See more
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </thead>
    </table>
}